<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.example.vault.gui.AddCredentialController"
      spacing="10" style="-fx-padding: 20;">
    
    <Label style="-fx-font-size: 20;" text="Add Credential"/>
    <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
    
    <GridPane vgap="10" hgap="10">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        
        <Label text="Service:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="serviceField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>